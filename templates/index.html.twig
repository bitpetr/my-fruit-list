{% extends 'base.html.twig' %}

{% block body %}
    <header class="bg-light py-3">
        <div class="container">
            <h1 class="text-center mb-0">üçì My Fruit List</h1>
        </div>
    </header>

    <main>
        <section class="bg-primary text-white py-5">
            <div class="container text-center">
                <h2 class="mb-4">Welcome to My Fruit List!</h2>
                <p class="lead mb-4">
                    Keep track of your favorite fruits and their nutritional facts.
                </p>
                <a href="/fruits" class="btn btn-lg btn-light">Browse Fruits</a>
            </div>
        </section>

        <section class="py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 text-center">
